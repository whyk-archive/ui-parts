{
  "private": true,
  "scripts": {
    "dev": "parcel src/index.html --open --no-cache",
    "prebuild": "rimraf dist/",
    "build": "parcel build src/index.html --public-url .",
    "lint:style": "stylelint **/*.scss --ignore-path .gitignore",
    "lint:js": "eslint --ext .ts --ignore-path .gitignore .",
    "lint": "run-p lint:*",
    "lintfix:style": "yarn lint:style --fix",
    "lintfix:js": "yarn lint:js --fix",
    "lintfix": "run-p lintfix:*"
  },
  "lint-staged": {
    "*.ts": "eslint",
    "*.scss": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@types/prismjs": "^1.16.1",
    "prismjs": "^1.20.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "autoprefixer": "^9.8.5",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-imagemin": "^4.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sass": "^1.26.8",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "typescript": "^3.9.5"
  }
}
